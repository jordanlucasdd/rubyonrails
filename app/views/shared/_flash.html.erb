<% flash.each do |type, message| %>
  <div class="row mt-2">
    <div class="col-md-2"></div>
    <div class="m-alert m-alert--outline alert <%= bootstrap_class_for(type)%> alert-dismissible fade show col-md-8" role="alert" style="font-weight: 600; font-size: 1.2em;">
      <button type="button" data-dismiss="alert" class="btn btn-outline-hover-info btn-elevate btn-icon close"><i class="la la-close"></i></button>
      <%= raw message %>
    </div>
    <div class="col-md-2"></div>
  </div>
<% end %>