<div class="kt-portlet kt-portlet--bordered">
  <div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
      <h3 class="kt-portlet__head-title">
        <%= ts.project.name %>
      </h3>
    </div>
    <div class="kt-portlet__head-toolbar">
    </div>
  </div>
  <div class="kt-portlet__body">

      <div class="kt-widget4">
        <% ts.time_sheets.each do |ts| %>
        <div id="ts-<%= ts.id %>" class="kt-widget4__item">
          <div class="person-pic mb-4 pb-4 mr-1">
            <img src="<%= asset_path('avatar-placeholder.png') %>" class="user-avatar" data-user="<%= ts.user.id %>" alt="">
          </div>
          <div class="kt-widget4__info">
            <div class="kt-widget4__username">
              <div class="col-xl-10">
                <h5 class="text-info"><%= ts.user.name %></h5>
                <h5><%= ts.project.name %></h5>
              </div>
            </div>
            <p class="kt-widget4__text">
              <div class="col-xl-5">
                <h6><%= ts.hours %> horas executadas  <small>- <%= ts.percentage %>%</small></h6>
                <div class="row">
                  <div class="col-xl-10">
                    <div class="progress progress-sm">
                      <div class="progress-bar bg-brand" role="progressbar" style="width: <%= ts.percentage %>%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                  </div>
                </div>
              </div>
            </p>
          </div>
          <button class="btn btn-sm btn-label-danger btn-bold btn-disapprove" data-id="<%= ts.id %>" >
            RECUSAR
          </button>
        </div>
        <% end %>
      </div>

  </div>
</div>