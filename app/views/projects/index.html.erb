<div class="row">

  <div class="d-md-none d-lg-block col-lg-3"></div>

  <div class="ml-1 col-lg-6 col-md-12 mr-1 mb-4">

    <div class="col-12 pr-3 pl-3">
        <div id="projects">
          <%= render partial:'project', collection: @recent_projects %>
        </div>
        <%= render partial:'search' %>
    </div>

  </div>

  <div class="d-md-none d-lg-block col-lg-3"></div>

</div>


<% content_for :javascript do %>
  <%= javascript_include_tag 'vendors/nouislider/distribute/nouislider.js', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'app/home/index.js', 'data-turbolinks-track': 'reload' %>
  <script type="text/javascript">
    jQuery(document).ready(function() {
      <% @recent_projects.each do |prj| %>
        slider(<%= prj.id %>);
      <% end %>
    });
  </script>
<% end %>

