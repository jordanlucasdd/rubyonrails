<div id="project-<%= project.id %>" class="row">


<div class="kt-portlet kt-portlet--bordered">
  <div class="kt-portlet__head">
    <div class="kt-portlet__head-label">
      <h3 class="kt-portlet__head-title">
        <%= project.name %>
      </h3>
    </div>
    <div class="kt-portlet__head-toolbar">
        <div class="kt-portlet__head-actions">
            <button type="button" onclick="removeProject(<%= project.id %>);" class="btn btn-sm btn-outline-danger btn-elevate btn-circle btn-icon">
                <i class="la la-close"></i>
            </button>
        </div>
    </div>
  </div>
  <div class="kt-portlet__body">
    
    <%= form_for :ts, url: time_sheets_path, remote: true, class:'kt-form' do |f| %>
        <input type="hidden" name="ts[project_id]" value="<%= project.id %>">
        <h6> Informe o % de horas gastas: </h6>
        <div class="form-group row">
            <div class="col-lg-10 col-md-12 col-sm-12">
                <div class="row align-items-center">
                    <div class="col-3">
                        <input type="text" class="form-control" name="ts[value]" id="value-<%= project.id %>" placeholder="%">
                    </div>
                    <div class="col-7">
                        <div id="nouislider-<%= project.id %>" class="kt-nouislider kt-nouislider--handle-danger"></div>
                    </div>
                </div>
                <span class="form-text text-muted mb-2">Arraste a barra ou informe valores m√∫ltiplos de 5.</span>
            </div>
            <div class="col-lg-2 col-md-12">
                <button type="submit" class="btn btn-outline-success float-right">ENVIAR</button>
            </div>
        </div>

    <% end %>
    
  </div>
</div>

</div>